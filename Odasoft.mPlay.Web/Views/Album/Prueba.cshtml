@model ICollection<Odasoft.mPlay.Models.Album>
@{
    ViewData["Title"] = "Home Page";
}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

<script>
    $(document).ready(function () {
        $('#myCarousel').carousel({
            interval: 10000
        })

        $('#myCarousel').on('slid.bs.carousel', function () {
            //alert("slid");
        });
    });
</script>

<style>
    .carousel-control {
        /*padding-top:10%;*/
        width: 5%;
    }

    .elem {
        display: inline-block;
    }

    .btn {
        margin-top: 15px;
    }

    img {
        width: 250px;
        height: 250px;
    }

    #img-modal {
        width: auto;
    }

    .thumbnail {
        padding: 25px;
    }

    .peliculas {
        margin-top: 25px;
    }

    .lead {
        text-align: center;
    }

    .menu {
        position: fixed;
    }

    .precio {
        text-align: center;
    }
</style>

<div class="col-xs-12">
    <h3 class="elem glyphicon glyphicon-star"></h3>
    <h3 class="elem">Top de esta semana</h3>
        <div class="well">
        <div id="myCarousel" class="carousel slide">

            <!-- Carousel items -->
            <div class="carousel-inner">
                <div class="item active">
                    <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-xs-12 col-md-4">
                                    <a href="Album/Details/@item.Id" class="thumbnail">
                                        <img src="@item.Image" alt="...">
                                    </a>
                                    <h3>@item.Title</h3>
                                    <p>@item.Description</p>
                                    <a class="btn btn-primary btn-lg">Buy</a>
                                </div>
                            }
                        </div><!--/row-->
                </div><!--/item-->

                <div class="item">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-xs-12 col-md-4">
                                <a href="Album/Details/@item.Id" class="thumbnail">
                                    <img src="@item.Image" alt="...">
                                </a>
                                <h3>@item.Title</h3>
                                <p>@item.Description</p>
                                <a class="btn btn-primary btn-lg">Buy</a>
                            </div>
                        }
                    </div><!--/item-->
                </div><!--/row-->

                <div class="item">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-xs-12 col-md-4">
                                <a href="Album/Details/@item.Id" class="thumbnail">
                                    <img src="@item.Image" alt="...">
                                </a>
                                <h3>@item.Title</h3>
                                <p>@item.Description</p>
                                <a class="btn btn-primary btn-lg">Buy</a>
                            </div>
                        }
                    </div><!--/item-->
                </div><!--/row-->

            </div><!--/carousel-inner-->

            <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>

            <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>

        </div><!--/myCarousel-->
        
    </div><!--/well-->
    
</div><!--/col-xs-12-->

