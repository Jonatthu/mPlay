@model Odasoft.mPlay.Models.Movie
@{
    ViewData["Title"] = "Movie Page";
    Layout = null;
}

<center>
    <img style="width:50%; height:50%" src="@Model.Image" alt="...">
</center>
<br />

<div class="row">
    <div class="col-md-10">
        <h1>@Model.Title</h1>
    </div>
    <div class="col-md-2">
        <h4>$@Model.Price</h4>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-body">
        <h4>Description </h4>
        <br />
        @Model.Description
    </div>
</div>


<div class="bottom">
    <a class="btn btn-primary btn-lg col-md-12" href="#" role="button">Add to cart</a>
</div>
